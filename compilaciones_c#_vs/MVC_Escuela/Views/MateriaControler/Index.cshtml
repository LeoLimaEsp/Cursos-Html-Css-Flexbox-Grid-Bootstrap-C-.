@model IEnumerable<MVC_Escuela.Models.MateriaViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Materias disponibles</h1>

<p>
    <a asp-action="Create">Agregar nueva materia 🙋🏻‍♂️</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdMateria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdMateria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grado)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.IdMateria  }) |
                @Html.ActionLink("Detalles", "Detail", new { id=item.IdMateria }) |
                @Html.ActionLink("Borrar ❌", "Delete", new {  id=item.IdMateria })
            </td>
        </tr>
}
    </tbody>
</table>
